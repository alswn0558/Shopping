<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="oderInterface"
            type="com.professionalandroid.apps.shopping.adapters.OrderListAdapter.OrderInterface" />

    </data>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.OrderFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/oderRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/order_item"
                android:layout_marginTop="16dp"
                tools:itemCount="4"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="24dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:text="주소"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:background="@drawable/round_edge"
                    style=""/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:text="전화번호"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:singleLine="true"
                    android:inputType="number"
                    android:background="@drawable/round_edge"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="32dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="@{`총 결제 금액: `+String.valueOf(oderInterface.calculateTotalPrice())+`원`}"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    tools:text="총 결제 금액: 5000000원"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>
                <Button
                    android:id="@+id/paymentButton"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    style="@style/Widget.MaterialComponents.Button"
                    android:text="결제하기"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>